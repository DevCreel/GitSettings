[user]
	name = creel
	email = devcreel@gmail.com
[core]
	filemode = true
	editor = nano
	excludesfile = ~/.git-ignore-global
	autocrlf = input
	excludesfile = ~/.gitignore
	whitespace = space-before-tab,-indent-with-non-tab,trailing-space
[gc]
	auto = 1
[help]
	autocorrect = 1
[merge]
	log = true
[apply]
	whitespace = fix
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions
[push]
  	default = current
[core]
  	excludesfile = ~/.gitignore
[alias]
  	lg 	 = log --graph --decorate --pretty=oneline --abbrev-commit
	lgg 	 = !git log --oneline --graph --decorate --all
	c 	 = commit -a -m
	dh   	 = diff HEAD^
  	dm   	 = diff master
	s 	 = status
	sb 	 = status -sb
  	remaster = rebase master
  	rei  	 = rebase -i master
	tags 	 = tag -l
	branches = branch -a
	remotes  = remote -v
